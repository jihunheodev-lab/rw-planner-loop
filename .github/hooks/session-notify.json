{
  "hooks": {
    "Stop": [
      {
        "type": "command",
        "command": "bash .github/hooks/session-notify/notify.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github/hooks/session-notify/notify.ps1",
        "timeout": 10
      }
    ],
    "PreToolUse": [
      {
        "type": "command",
        "command": "bash .github/hooks/session-notify/notify.sh",
        "windows": "powershell -ExecutionPolicy Bypass -File .github/hooks/session-notify/notify.ps1",
        "timeout": 10
      }
    ]
  }
}
